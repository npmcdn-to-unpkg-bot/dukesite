<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="page-header">
      <p><%= @showcase.title %></p>
    </div>

    <div class="row showcase-body">
      <% @products.each do |p| %>
        <div class="col-xs-12 col-sm-2">
          <%= link_to product_path(p), class:"thumbnail", target: "_blank" do %>
            <%= image_tag p.image_url,  class: "img-responsive" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>