<% if admin_signed_in? %>
  <div class="row admin_link">
    <ul class="pull-right">
      <li>Hi, <%= current_admin.email %> | </li>
      <li><%= link_to "Log out", destroy_admin_session_path, :method => :delete %> | </li>
      <li><%= link_to "Dashboard", admin_index_path %></li>
    </ul>
  </div>
<% end %>


<nav class="row nav-bar">
  <div class="container-fluid">
    <div class="nav-bar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
        <span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
  </div>

  <div class="collapse navbar-collapse" id="navbar-collapse-1">
    <div class="row logo-wrapper">
      <%= link_to image_tag(@icon, width: "250px"), root_path %>
    </div>
    <div class="row nav-link-bar">
      <ul>
        <% @showcases.each do |s| %>
          <li><%= link_to s.title, showcase_path(s) %></li>
        <% end %>
      </ul>
      <ul>
        <% @categories.each do |c| %>
          <li><%= link_to c.name, category_path(c) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
