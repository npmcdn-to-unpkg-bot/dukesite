<div class="row category">
  <div class="col-xs-12 col-sm-2">
    <div class="page-header">
      <h4><%= @category.name %></h4>
    </div>
    <% if @products.size == 0 %>
      <p>No products</p>
    <% end %>
  </div>

  <div class="col-xs-12 col-sm-3 product">
    <% @products.each do |p| %>
        <%= link_to product_path(p), class:"thumbnail", target: "_blank" do %>
          <%= image_tag p.image_url,  class: "img-responsive" %>
        <% end %>
    <% end %>
  </div>
</div>
