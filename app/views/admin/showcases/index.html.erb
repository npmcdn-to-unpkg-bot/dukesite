<div class="page-header">
  <h1>Showcases</h1>
</div>

<p class="pull-right">
  <%= link_to new_admin_showcase_path do %>
    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Add a showcase
  <% end %>
</p>

<table class="table table-hover">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Feature Image</th>
    <th>Display on Landing Page</th>
    <th>Created at</th>
    <th>Last updated</th>
    <th>Products</th>
    <th></th>
    <th>Front</th>
  </tr>
 
  <% sum = @showcases.length 
     i = 0
  %> 
  <% @showcases.each do |p| %>
    <% if i < sum %>
    <tr>
      <td><%= i+1 %>. </td>
      <td><%= p.title %></td>
      <td><%= truncate(p.feature_img_url) %></td>
      <td>
        <% if p.show_on_landing_page %>
          Yes
        <% else %>
          No
        <% end %>
      </td>
      <td><%= p.created_at.to_formatted_s(:long) %></td>
      <td><%= p.updated_at.to_formatted_s(:long) %></td>
      <td>
        <%= link_to admin_showcase_products_path(p) do %>
          <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
        <% end %>
      </td>
      <td>
        <%= link_to edit_admin_showcase_path(p) do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %>
        <%= link_to admin_showcase_path(p), method: :delete, data: { confirm: "Are you sure?" } do %>
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        <% end %>
      </td>
      <td>
        <%= link_to showcase_path(p) do %>
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
        <% end %>
      </td>
      <% i += 1%>
    </tr>
    <% end %>
  <% end %>
</table>
