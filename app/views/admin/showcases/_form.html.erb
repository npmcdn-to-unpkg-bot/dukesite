<%= render "shared/error", object: @showcase %>

<div class="col-sm-2">
  <div class="row">
    <% image = @showcase.image.url
       image.nil? ? img_url = "http://thedudeminds.de/images/no_image_available.png" : img_url = image %>
    <%= image_tag img_url, class: "img-responsive thumbnail", alt: "Responsive image" %> 
  </div>

  <% unless  @showcase.id.nil? %>
    <div class="row">
      <%= link_to showcase_path(@showcase), target: "_blank" do %>
        <p class="pull-right"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Shop</p>
      <% end %>
    </div>
    <div class="row">
      <p>Created at: <br><%= @showcase.created_at.to_formatted_s(:db) %></p>
      <p>Last updated at: <br><%= @showcase.updated_at.to_formatted_s(:db) %></p>
    </div>
  <% end %>
</div>

<div class="col-sm-10">
  <%= form_for [:admin, @showcase] do |s| %>
    <div class="form-group">
      <%= s.label "Title" %>
      <%= s.text_field :title, class: "form-control", placeholder: "Enter title" %>
    </div>
    
    <div class="form-group">
      <%= s.label "Upload a Feature Image" %>
      <%= s.file_field :image, accept: 'image/png,image/gif,image/jpeg' %>
    </div>
    <div class="form-group">
      <%= s.label "Display on the landing_page?" %><br>
      <%= s.radio_button :show_on_landing_page, false %> No <br>
      <%= s.radio_button :show_on_landing_page, true %> Yes
    </div>
    <%= link_to "Cancel", admin_showcases_path, class: "btn btn-warning" if @showcase.id.present? %>
    <%= s.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
