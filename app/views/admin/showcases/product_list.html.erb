<div class="page-header">
  <h1><%= @showcase.title %> 
    <span class="badge"><%= @showcase.products.size %></span>
  </h1>
  <a data-toggle="collapse" href="#collapseShowcaseForm">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span>
    Edit
  </a>
</div>

<ol class="breadcrumb">
  <li><%= link_to "Admin", admin_index_path %></li>
  <li><%= link_to "Showcases", admin_showcases_path %></li>
  <li class="active"><%= @showcase.title %></li>
</ol>

<%= render "shared/error", object: @showcase %>
<div class="collapse" id="collapseShowcaseForm">
  <div class="row">
    <div class="col-xs-12 col-sm-12 well">
      <%= render "form" %>
    </div>
  </div>
</div>

<%= render "admin/products/product_list", products: @products %>
<%# Don't change @products to @showcase.products. 
    Otherwise, pagination won't work %>
