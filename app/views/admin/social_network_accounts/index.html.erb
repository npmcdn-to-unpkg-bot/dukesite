<div class="page-header">
  <h1>Links</h1>
</div>

<!-- link to add new social media account item -->
<p>
  <a data-toggle="collapse" href="#collapseAddAnaForm" aria-expanded="false">
    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
     Add a link
  </a>
</p>

<div class="collapse" id="collapseAddAnaForm">
  <div class="row well">
    <%= render "form" %>
  </div>
</div>

<%# Links list %>
<div id="snaThumbnails">
  <% @all_snas.each do |p| %>
    <% p.visible? ? ((label = "success") && (status = "Visible")) : ((label = "default") && (status = "Inisible")) 
       p.updated_at? ? time = p.updated_at : time = p.created_at %>
    <div class="panel panel-default">

      <div class="panel-heading">
        <div class="media-left">
          <%= link_to url_with_protocol(p.platform_url), :target => "_blank" do %>
            <%= image_tag p.image.url,  size: "32x32" %>
          <% end %>
        </div>
        <div class="media-body">
          <h3 class="panel-title"><%= p.platform_name %><small> <span class="label label-<%= label %>"><%= status %></span><span class="pull-right"><%= time.to_formatted_s(:long) %></span></small></h3>

          <%= link_to url_with_protocol(p.platform_url), p.platform_url, :target => "_blank" %>
          <small class="pull-right">
            <%# collapse trigger%>
            <%= link_to admin_social_network_account_path(p), method: :delete, data: { confirm: "Are you sure?" } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            <% end %>
          </small>
        </div>
        <p><a class="pull-right" data-toggle="collapse" data-parent="#snaThumbnails" aria-expanded="true" href="#editSnaForm-<%= p.slug %>"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></p>
      </div>
      <div class="panel-body collapse" id="editSnaForm-<%= p.slug %>">
        <%#= render "form", obj: p %>
        <%= render "shared/error", object: p %>
        <%= form_for [:admin, p] do |s| %>
          <div class="form-group">
            <%= s.label "Name" %>
            <%= s.text_field :platform_name, class: "form-control", placeholder: "Give this a link name" %>
          </div>

          <div class="form-group">
            <%= s.label "Url" %>
            <%= s.text_field :platform_url, class: "form-control", placeholder: "Link Url" %>
          </div>
          
          <div class="form-group">
            <%= s.label "Upload an Image" %>
            <%= s.file_field :image, accept: 'image/png,image/gif,image/jpeg' %>
          </div>
          <div class="form-group">
            <%= s.label "Visible?" %><br>
            <%= s.radio_button :visible, false %> No <br>
            <%= s.radio_button :visible, true %> Yes
          </div>
          <%= link_to "Cancel", admin_social_network_accounts_path, class: "btn btn-warning" %>
          <%= s.submit "Submit", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
