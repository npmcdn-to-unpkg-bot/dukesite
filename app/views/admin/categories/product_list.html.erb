<div class="page-header">
  <h1><%= @category.name %>
    <span class="badge"><%= @category.products.size %></span>
    <small>
      <a data-toggle="collapse" href="#collapseCatForm">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      </a>
    </small>
  </h1>
  <% @category.visible? ? ((status = "Visible") && (label = "label-success")) : ((status = "Invisible") && (label = "label-default")) %>
    <span class="label <%= label %>"><%= status %></span>
  <%= link_to category_path(@category), target: "_blank" do %>
    <span class="pull-right">Go to Shop <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span></span>
  <% end %>
</div>

<ol class="breadcrumb">
  <li><%= link_to "Admin", admin_index_path %></li>
  <li><%= link_to "Categories", admin_categories_path %></li>
  <li class="active"><%= @category.name %></li>
</ol>

<div class="collapse" id="collapseCatForm">
  <div class="row">
    <div class="col-xs-12 col-sm-12 well">
      <%= render "form" %>
    </div>
  </div>
</div>

<%= render "admin/products/product_list", products: @products %>
  <%# Don't change @products to @category.products. 
      Otherwise, pagination won't work %>

<p class="text-right"><small class="help-block"><%= @category.updated_at.to_formatted_s(:db) %> (last updated)</small></p>
