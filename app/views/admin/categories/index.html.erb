<div class="page-header">
  <h1>Categories <span class="badge"><%= @categories_amount %></span></h1>
</div>

<p>
  <a data-toggle="collapse" href="#collapseCatForm" aria-expanded="false">
    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
     Add Category
  </a>
</p>

<div class="container">
  <div class="row">
    <div class="collapse" id="collapseCatForm">
      <div class="col-xs-12 col-sm-12 well">
        <%= render "form" %>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/pagination', objects: @categories %>
<div class="row grid">
  <% @categories.each do |p| %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 grid-item">
      <div class="thumbnail admin-category-thumbnail <%= 'invisible_thumbnail' if !p.visible %>">

        <%= link_to admin_category_path(p) do %>
          <%= display_photo_image_tag(p) %>
        <% end %>
        <div class="caption">
          <h4>
            <%= link_to p.name, admin_category_path(p)%>
          </h4>
          <p> 
            <button type="button" class="btn <%= visible_status_btn(p) %> btn-sm" id="cat-status" data-edit=<%= admin_category_visible_switch_path(p) %> data-visible=<%= p.visible? %>><%= p.visible? ? "visible" : "hidden" %></button>
            <%= link_to "Delete", admin_category_path(p), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: "Are you sure?" } %>
            <%= link_to "Shop", category_path(p), class: "pull-right" %>
          </p>
          <small>
          <% p.updated_at.nil? ? update_time = p.created_at.to_formatted_s(:db) : update_time = p.updated_at.to_formatted_s(:db) %>
          <%= update_time %> <em>(last updated)</em></small>
          <span class="badge pull-right"><%= p.products.size %></span>
        </div>
      </div>

    </div>
  <% end %>
</div>

<%# Pagination %>
<%= render 'shared/pagination', objects: @categories %>
