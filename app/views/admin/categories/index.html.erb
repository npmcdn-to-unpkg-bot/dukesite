<div class="page-header">
  <h1>Categories</h1>
</div>

<p class="pull-right">
  <%= link_to new_admin_category_path do %>
    <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Add a category
  <% end %>
</p>

<table class="table table-hover">
  <tr>
    <th></th>
    <th>Name</th>
    <th>Created at</th>
    <th>Last updated</th>
    <th>Products</th>
    <th></th>
    <th>Front</th>
  </tr>
 
  <% sum = @categories.length 
     i = 0
  %> 
  <% @categories.each do |p| %>
    <% if i < sum %>
    <tr>
      <td><%= i+1 %>. </td>
      <td><%= p.name %></td>
      <td><%= p.created_at.to_formatted_s(:long) %></td>
      <td><%= p.updated_at.to_formatted_s(:long) %></td>
      <td>
        <%= link_to admin_category_products_path(p) do %>
          <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
        <% end %>
      </td>
      <td>
        <%= link_to edit_admin_category_path(p) do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <% end %>
        <%= link_to admin_category_path(p), method: :delete, data: { confirm: "Are you sure?" } do %>
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        <% end %>
      </td>
      <td>
        <%= link_to category_path(p) do %>
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
        <% end %>
      </td>
      <% i += 1%>
    </tr>
    <% end %>
  <% end %>
</table>
