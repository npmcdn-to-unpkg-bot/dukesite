<div class="col-sm-2">
  <div class="row">
    <% @thumb_img_url.present? ? thumb_img_url = @thumb_img_url : thumb_img_url = "http://thedudeminds.de/images/no_image_available.png" %>
    <% if @thumb_img_url.present? %>
      <%= image_tag thumb_img_url, class: "img-responsive thumbnail", id: "cat-form-img-preview", data: {toggle: "modal", target: "#imageUploader"} %>
      <p class="help-block text-center">Click image to edit</p>
    <% else %>
      <%= image_tag thumb_img_url, class: "img-responsive thumbnail", id: "cat-form-img-preview" %>
    <% end %>
  </div>
</div>

<div class="col-sm-9 col-sm-offset-1">
  <%= form_for [:admin, @category], html: {class: "form-horizontal"} do |p| %>
    <div class="form-group">
      <%= p.label "Name", class: "control-label" %>
      <div class="row">
        <div class="col-xs-12 col-sm-8">
          <%= p.text_field :name, class: "form-control", placeholder: "Enter Name" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= p.label "visible", class: "control-label" %><br />
      <%= p.radio_button :visible, false %> No
      <%= p.radio_button :visible, true %> Yes
    </div>
    <% unless @thumb_img_url.present? %>
      <div class="form-group">
        <%= p.label "Upload Image", class: "control-label" %>
        <%= p.fields_for :photo do |c| %>
          <%= c.file_field :image, accept: 'image/png,image/gif,image/jpeg' %>
        <% end %>
      </div>
    <% end %>
    <div class="form-group">
      <%= link_to "Cancel", admin_categories_path, class: "btn btn-warning" if @category.id.present? %>
      <%= p.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<% if !@category.id.nil? %>
  <small class="text-right help-block"><em><%= @category.created_at.to_formatted_s(:db) %> (created)</em></small>
<% end %>

<!-- Modal -->
<%= render 'image_uploader_modal', object: @category %>
