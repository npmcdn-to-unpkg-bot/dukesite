<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 grid-item">
  <div class="thumbnail admin-quote-thumbnail <%= 'invisible_thumbnail' if !quote.visible %>">
    <%= display_photo_image_tag(quote) %>
    <div class="caption">
      <h4><%= quote.title %></h4>
      <p><%= quote.description %></p>
      <p> 
        <button type="button" class="btn <%= visible_status_btn(quote) %> btn-sm" id="quote-status" data-edit=<%= admin_quote_visible_switch_path(quote) %> data-visible=<%= quote.visible? %>><%= quote.visible? ? "Visible" : "Hidden" %></button>
      </p>
      <p>
          <%= link_to "Delete", admin_quote_path(quote), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: "When you delete this quote, the images related to this quote will also be deleted. Are you sure?" } %>
          <%= link_to "Edit", edit_admin_quote_path(quote), class: "btn btn-info btn-sm" %>
          <%#= link_to "Shop", showcase_path(quote), class: "pull-right" %>
      </p>
      <small>
      <% quote.updated_at.nil? ? update_time = quote.created_at.to_formatted_s(:db) : update_time = quote.updated_at.to_formatted_s(:db) %>
      <%= update_time %> <em>(last updated)</em></small>
    </div>
  </div>
</div>
