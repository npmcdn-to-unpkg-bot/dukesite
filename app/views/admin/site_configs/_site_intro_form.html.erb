<%= render "shared/error", object: site_intro %>
<%= form_for [:admin, site_intro] do |f| %>
<div class="col-xs-12">
  
  <div class="row">
    <div class="col-xs-12 col-sm-9">
      <%= f.text_area :value, class: 'tinymce', rows: 20, cols: 120 %>
    </div>

    <div class="col-xs-12 col-sm-3">
      <div class="panel panel-default">
        <div class="panel-heading">Information</div>
          <div class="panel-body">
            <p><%= update_time(site_intro) %> <em><small>(last updated)</small></em></p>
            <hr>
            <%= link_to "Cancel", :back, class: "btn btn-warning" %>
            <%= f.submit "Save", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  
<% end %>
  
<%= tinymce :alternate %>

<%= tinymce_assets %>
