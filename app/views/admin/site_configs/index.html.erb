<div class="page-header">
  <h1>General</h1>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Website</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <%= form_tag admin_general_site_configs_path, :method => :put do %>
          <% @site_configs.each do |config| %>
            <%= fields_for 'site_configs[]', config do |f| %>
              <div class="form-group">
                <%= hidden_field_tag config.slug %>
                <%= f.label :key, config.key.titleize, class: "control-label" %>
                <%= f.text_field :value, class: "form-control", placeholder: config.value, maxlength: config.maxlength %>
                <p class="help-block"><%= config.note %></p>
              </div>
            <% end %>
          <% end %>
          <%= submit_tag "Save", class: "btn btn-default" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Icons</h3>
  </div>
  <div class="panel-body">
    <%= render "icon_form", :icon_obj => @favicon, :icon_img_url => @favicon_img_url %>
    <hr>
    <%= render "icon_form", :icon_obj => @icon, :icon_img_url => @icon_img_url %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">SEO</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <%= form_for [:admin, @seo, @seo.keywords.new], remote: true, :html => {class: "form-inline"} do |keyword| %>
          <div class="form-group">
            <%= keyword.text_field :value, class: "form-control", placeholder: "SEO" %>
          </div>
          <%= submit_tag "Add", class: "btn btn-default" %>
        <% end %>
        <p class="help-block"><%= @seo.note %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <p class="hide" id="seo-msg"></p>
        <div id="seo-list">
        <% @keywords.each do |keyword| %>
          <p><span class="label label-default">
            <%= keyword.value %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true" id="remove-keyword" data-url="<%= admin_site_config_keyword_path(@seo, keyword) %>"></span>
          </span></p>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
