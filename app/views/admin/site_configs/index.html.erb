<div class="page-header">
  <h1>General</h1>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Website</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <%= form_tag admin_general_site_configs_path, :method => :put do %>
          <%= render partial: "general_site_config_form", collection: @site_configs, as: :config %>
          <%= submit_tag "Save", class: "btn btn-default" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render 'site_config_panel' %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Icons</h3>
  </div>
  <div class="panel-body">
    <%= render "icon_form", :icon_obj => @favicon, :icon_img_url => @favicon_img_url %>
    <hr>
    <%= render "icon_form", :icon_obj => @icon, :icon_img_url => @icon_img_url %>
  </div>
</div>

<%= render "admin/shared/seo_box", object: @seo %>
