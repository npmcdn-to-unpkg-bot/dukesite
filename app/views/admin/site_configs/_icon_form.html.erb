  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= form_for [:admin, icon_obj] do |icon| %>
        <div class="col-sm-2">
          <% icon_img_url.nil? ? img_url = "http://thedudeminds.de/images/no_image_available.png" : img_url = icon_img_url %>
          <%= image_tag img_url, class: "img-responsive thumbnail", id: "#{icon_obj.slug}-form-img-preview" %>
        </div>

        <div class="col-sm-9 col-sm-offset-1">
          <div class="form-group">
            <%= icon.label icon_obj.key %>

            <%= icon.fields_for :photo do |c| %>
              <%= c.file_field :image, accept: 'image/png,image/gif,image/jpeg', id: "#{icon_obj.slug}-image" %>
              <p class="help-block"><small><em><%= icon_obj.note %></small></em></p>
            <% end %>
          </div>
          <%= submit_tag "Upload", class: "btn btn-default btn-sm" %>
        </div>
      <% end %> 
    </div>
  </div>