<div class="modal fade" id="imageUploaderModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Replace Image</h4>
      </div>
      <%= form_for object, url: image_update_url, method: :put, html: {class: "form-horizontal"} do |p| %>
        <div class="modal-body row">
          <div class="col-xs-12 col-sm-6">
            <%= image_tag img_url, class: "img-responsive thumbnail", id: preview_id, size: "120x120" %>
          </div>
          <div class="col-xs-12 col-sm-6">
            <div class="form-group">
              <%= p.label "Upload Image", class: "control-label" %>
              <%= p.file_field :image, accept: 'image/png,image/gif,image/jpeg' %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <div class="form-group">
            <%= link_to "Cancel", return_path, class: "btn btn-warning", data: { dismiss: "modal"} %>
            <%= p.submit "Replace", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
