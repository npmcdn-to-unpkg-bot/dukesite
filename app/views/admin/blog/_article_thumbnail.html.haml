.col-xs-12.col-sm-6.col-md-4.col-lg-3.grid-item
  %div{:class => ['thumbnail', 'admin-article-thumbnail', published_thumb?(article)]}
    = link_to_display_article_image_tag article, edit_admin_blog_article_path(article)
    .caption
      %h4
        = link_to text_truncate(article.title, 50), edit_admin_blog_article_path(article)
        %br/
        %small= text_truncate(article.subtitle, 70)
      %p= strip_tags text_truncate(article.content, 150)
      %p
        %button#article-status{:type => "button", :class => ['btn', 'btn-sm', publish_status_btn(article)], :data => { :edit => admin_blog_article_publish_switch_path(article), :visible => article.published? } }
          = publish_status(article)
      %div
        = link_to "Delete", admin_blog_article_path(article), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: "Are you sure?" }
        = link_to "Edit", edit_admin_blog_article_path(article), class: "btn btn-info btn-sm"
        = link_to_if article.published, "View in Blog", blog_path(article), class: "pull-right"
