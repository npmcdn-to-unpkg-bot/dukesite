<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 grid-item">
  <div class="thumbnail admin-article-thumbnail <%= published_article?(article) %>">
    <%= link_to_display_article_image_tag article, edit_admin_blog_article_path(article) %>
    <div class="caption">
      <h4><%= link_to text_truncate(article.title, 50), edit_admin_blog_article_path(article) %><br/ >
        <small><%= text_truncate(article.subtitle, 70) %></small>
      </h4>
      <p> 
        <%= strip_tags text_truncate(article.content, 150) %>
      </p>
      <p>
        <button type="button" class="btn <%= article.published? ? "btn-primary" : "btn-default" %> btn-sm" id="article-status" data-edit=<%= admin_blog_article_publish_switch_path(article) %> data-visible=<%= article.published? %>><%= publish_status(article) %></button>
      <p>
      <div>
        <%= link_to "Delete", admin_blog_article_path(article), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: "Are you sure?" } %>
        <%= link_to "Edit", edit_admin_blog_article_path(article), class: "btn btn-info btn-sm" %>
        <%= link_to "View in Blog", blog_path(article), class: "pull-right" if article.published %>
      </div>
      <small>
    </div>
  </div>
</div>
