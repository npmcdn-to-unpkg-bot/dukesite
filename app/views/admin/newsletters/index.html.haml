.page-header
  %h1 Newsletters

%p
  = link_to new_admin_newsletter_path do
    %span.glyphicon.glyphicon-plus-sign{ :aria => { :hidden => "true"} }
    Create Newsletter

.well
  %p 
    Subscribers: 
    = @confirmed_subscriber.length
    |
    = @unconfirmed_subscriber.length
    (confirmed | unconfirmed)
  %p 
    Newsletters: 
    = @sent_newsletter.length
    |
    = @unsent_newsletter.length
    (sent | draft)

%h3 Sent
= render 'newsletter_panel', newsletters: @sent_newsletter
%hr

%h3 Drafts
= render 'newsletter_panel', newsletters: @unsent_newsletter
