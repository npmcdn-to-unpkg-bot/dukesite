<% sum = @products.length 
   i = 1
%>


<table class="table table-hover">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Description</th>
    <th>Url</th>
    <th>Created at</th>
    <th>Last updated</th>
  </tr>
  
  <% @products.each do |p| %>
    <% if i < sum %>
    <tr>
      <td><%= i %>. </td>
      <td><%= p.title %></td>
      <td><%= truncate(p.description) %></td>
      <td><%= truncate(p.url) %></td>
      <td><%= p.created_at.to_formatted_s(:long) %></td>
      <td><%= p.updated_at.to_formatted_s(:long) %></td>
      <% i += 1%>
    </tr>
    <% end %>
  <% end %>
</table>
