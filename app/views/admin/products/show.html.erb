<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <%= image_tag @product_details["LargeImageURL"], class: "img-responsive", size: '550' %>
  </div>
  <div class="col-md-4">

    <h3>
      <%= @product_details["Title"] %>
    </h3>
    <hr>
    <dl class="dl-horizontal">
      <dt>Description</dt>
      <dd><%= @product_details["Description"] %></dd>
      <dt>Category</dt>
      <dd>
        <% @product.showcases.each do |s| %>
          <%= link_to s.title, showcase_path(s) %> | 
        <% end %>
      </dd>
      <dt>Price</dt>
      <dd><%= @product_details["Price"] %> <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span></dd>
      <hr>  
      <dt></dt>
      <dd><%= link_to "Buy me on Amazon", @product_details["DetailPageURL"], class: "btn btn-danger", target: "_blank" %></dd>
    </dl>
  </div>
</div>
