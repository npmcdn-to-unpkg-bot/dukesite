
<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <%= image_tag @product.image_url, class: "img-responsive", size: '550' %>
  </div>
  <div class="col-md-3">
    <h3><%= @product.title %></h3>

    <dl class="dl-horizontal">
    <dt>Description</dt>
    <dd>...</dd>
  </dl>
    <h4>Description</h4>
    <p><%= @product.description %></p>
    <%= link_to "Buy me on Amazon", @product.url, class: "btn btn-danger" %>

    <% @product.showcases.each do |s| %>
      <p><%= link_to s.title, root_path %></p>
    <% end %>
  </div>
</div>




