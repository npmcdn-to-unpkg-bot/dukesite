<% if @articles.size == 0 %>
  <%= render "shared/info_box", msg: "<p><em>A Blog for Our Duke Girls is Coming Soon...</em></p>" %>
<% else %>
  <div class="container">
    <div class="col-xs-12 col-sm-12">
      <% @articles.each do |p| %>
        <%= link_to blog_path(p) do %>
          <div class="col-xs-12 col-sm-4 blog-article-thumbnail">
            <div class="blog-article-thumbnail-title">
              <h3>
                <%= truncate(p.title, length: 55, omission: '...') %><br><small> <%= truncate p.subtitle, length: 55, omission: '...' %></small>
              </h3>
            </div>
            <% if p.photo.present? && p.photo.image.thumb.url.present?
                image_url = p.photo.image.thumb.url
              else
                image_url = "http://thedudeminds.de/images/no_image_available.png"
              end
            %>
            <%= link_to blog_path(p), class:"thumbnail" do %>
              <%= image_tag image_url, class: "img-responsive", alt: p.title %>
            <% end %>

            <div class="caption">
              <p><%= strip_tags p.content.truncate(347, :separator => " ",omission: '...') %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
