<%= link_to blog_path(article) do %>
  <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 blog-article-thumbnail grid-item">
    <div class="thumbnail blog-article-thumbnail-title">
      <%= link_to blog_path(article) do %>
        <%= display_article_image(article, article.title) %>
      <% end %>

      <div class="caption">
        <h3>
          <%= text_truncate(article.title, 50) %><br><small> <%= text_truncate(article.subtitle, 70) %></small>
        </h3>
        <p><%= strip_tags article.content.truncate(347, :separator => " ",omission: '...') %></p>
      </div>
    </div>
  </div>
<% end %>
