<h4 class="text-center">Stay in touch with <em>Duke for Girls</em>.</h4>

<div>
  <p id="subscribe-msg" class="hide"></p>
</div>
<%= form_tag({controller: "application", action: 'create_subscriber'}, 
              method: "put", 
              class:  "form-inline",
              id: "subscribe-form",
              remote: true) do %>
  <div class="form-group col-xs-10 col-xs-offset-1">
  <%= email_field_tag 'email', nil , class: "form-control", placeholder: "Your Email" %>
  <%= submit_tag "Subscribe", class: "btn btn-default" %>
  </div>
<% end %>
