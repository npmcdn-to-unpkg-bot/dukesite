<div class="row showcase">
  <% @showcases.each do |showcase| %>
    <div class="row showcase-header">
      <div class="col-xs-12 col-sm-4">
        <p><strong><%= link_to showcase.title, showcase_path(showcase) %></strong><br/ ><small><em><%= showcase.subtitle %></em></small></p>
      </div>
      <div class="col-xs-12 col-sm-2 hidden-xs pull-right more-button">
        <p><%= link_to "More", showcase_path(showcase) %></p>
      </div>
    </div>
    
    <div class="row showcase-body">
      <% showcase_products = showcase.products.order("updated_at DESC")[0..7] %>

      <% showcase_products.each do |p| %>
        <div class="col-xs-12 col-sm-3">
          <%= link_to product_path(p), class:"thumbnail" do %>
            <%= image_tag p.image_url, class: "img-responsive" %>
          <% end %>
            <p class="text-center"><%= p.title %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
