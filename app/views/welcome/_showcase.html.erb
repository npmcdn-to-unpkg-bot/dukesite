<% @showcases.each do |showcase| %>
  <div class="row showcase-header">
    <div class="col-sm-4">
      <p><b><%= showcase.title %></b></p>
    </div>
    <div class="col-sm-6">
    </div>
    <div class="col-sm-2 hidden-xs pull-right">
      <p><small><%= link_to "More", root_path %></small></p>
    </div>
  </div>
  
  <div class="row showcase-body">
    <div class="col-xs-12 col-md-4 showcase-feature">
      <a href="#" class="thumbnail">
        <%= image_tag showcase.feature_img_url, class: "img-responsive", alt: "Responsive image" %>
      </a>
    </div>
    <% showcase_products = showcase.products[0..7] %>

    <% showcase_products.each do |p| %>
      <div class="col-xs-12 col-md-2 showcase-img">
        <%= link_to product_path(p), class:"thumbnail" do %>
          <%= image_tag p.url,  class: "img-responsive", alt: "Responsive image" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <hr>
<% end %>
