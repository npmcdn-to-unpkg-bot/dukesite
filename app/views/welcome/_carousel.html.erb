<div class="row landing-carousel" >
  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="5000">
    <!-- Indicators -->
    <% 
        first_carousel = @visible_carousels.first
        num = @visible_carousels.size
        i = 0
    %>
    <ol class="carousel-indicators">
      <% while i < num %>
        <li data-target="#carousel-example-generic" data-slide-to="<%= i %>" class="<%= 'active' if i == 0 %>">
        </li>
        <% i += 1 %>
      <% end %>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <% @visible_carousels.each do |carousel| %>
        <div class="item <%= "active" if carousel.id == first_carousel.id %>">
          <%= image_tag carousel.photo.image.url, alt: carousel.title if carousel.photo.present? %>
        </div>
      <% end %>
    </div>
  </div>
</div>
